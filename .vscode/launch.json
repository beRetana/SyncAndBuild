{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Tests",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Tests/RunTests.ps1",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run Tests (Watch)",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Tests/RunTests.ps1",
            "args": ["-Watch"],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run Tests (Coverage)",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Tests/RunTests.ps1",
            "args": ["-Coverage"],
            "cwd": "${workspaceFolder}"
        }
    ]
}